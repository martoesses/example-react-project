{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": ["plugin:react/recommended", "plugin:prettier/recommended"],
  "plugins": [],
  "rules": {
    "react/prop-types": 1,
    // Needed for prettier warnings not to break the build in CRA v4+
    "prettier/prettier": ["error",{
      "endOfLine": "auto"}
    ]
  }
}